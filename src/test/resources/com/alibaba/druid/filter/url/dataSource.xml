<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-lazy-init="false">

    <tx:annotation-driven />
    <bean id="url-filter" class="com.alibaba.druid.filter.url.JdbcUrlHostAndPortReplaceFilter" init-method="init">
        <property name="file" value="/com/alibaba/druid/filter/url/datasource.properties" />
    </bean>

    <bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource"
          init-method="init" destroy-method="close">
        <property name="url" value="jdbc:derby:memory:${datasource.test};create=true" />
        <property name="initialSize" value="1" />
        <property name="maxActive" value="10" />
        <property name="proxyFilters">
            <list>
                <ref bean="url-filter" />
            </list>
        </property>
        <property name="filters" value="slf4j" />
    </bean>

</beans>
